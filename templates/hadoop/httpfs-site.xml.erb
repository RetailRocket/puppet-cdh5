<?xml version="1.0"?>
<!-- NOTE:  This file is managed by Puppet. -->

<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
<% if enable_webhdfs -%>
<% # NOTE: There might be a better way to
   # conditionally set this rather than relying
   # the enable_webhdfs setting.  This will do for now.
-%>
  <!-- Hue HttpFS proxy user setting -->
  <property>
    <name>httpfs.proxyuser.hue.hosts</name>
    <value>*</value>
  </property>
  <property>
    <name>httpfs.proxyuser.hue.groups</name>
    <value>*</value>
  </property>
  
  <!-- Oozie HttpFS proxy user -->
  <property>
    <name>httpfs.proxyuser.oozie.hosts</name>
    <value>*</value>
  </property>
  <property>
    <name>httpfs.proxyuser.oozie.groups</name>
    <value>*</value>
  </property>
  
  <property>
    <name>httpfs.proxyuser.httpfs.hosts</name>
    <value>localhost,<%= @primary_namenode_host %>,rrockettest</value>
  </property>
  <property>
    <name>httpfs.proxyuser.httpfs.groups</name>
    <value>hadoop,hdfs,httpfs,necromant</value>
  </property>

<% end -%>

</configuration>
